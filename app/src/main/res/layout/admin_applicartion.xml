<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/devloper_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application"
        android:textSize="22dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:id="@+id/devloper_text"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/admin_application_delete_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="208dp"
        android:text="Delete Application" />

    <Button
        android:id="@+id/admin_application_requested_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="308dp"
        android:text="Requested Application" />
    <Button
        android:id="@+id/admin_application_rejected_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="408dp"
        android:text="Rejected Application" />
    <Button
        android:id="@+id/admin_application_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="508dp"
        android:text="Back" />

</RelativeLayout>